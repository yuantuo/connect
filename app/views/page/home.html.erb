<div class='container'>

	<section class="span11">
		<br />
		<ul class="nav nav-pills span10">
		  	<li class="span2"><%#= image_tag("icon.jpeg", :id => 'icon', :class => 'span2', :alt => "Icon") %></li>
		</ul>
		<legend class="span11"></legend>
	</section>

	<section>
		<div id="mainphrase" class="span8 offset1">
			<h1><%= 'Last week thousands of students signed up for Connect to manage their work.
								Today it’s your turn.' %>
			</h1>
		</div>
	</section>

	<section class="span10 offset2">
		<div id="login">
			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
			  <div><%= f.label :email %><br />
			  <%= f.email_field :email, :autofocus => true %></div>

			  <div><%= f.label :password %><br />
			  <%= f.password_field :password %></div>

			  <% if devise_mapping.rememberable? -%>
			    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
			  <% end -%>

			  <div><%= f.submit "Sign in", :class => "btn btn-success" %></div>
			<% end %>

			<%#= render "devise/shared/links" %>			
		</div>
		<%= image_tag("bubble.jpg", :id => 'bubble', :class => 'span3', :alt => "Edit Entry") %>
		<%= image_tag("student2.jpg", :id => 'homeimg', :alt => "Edit Entry") %>
		
		<%= image_tag("box2.png", :id => 'box2', :class => 'span4', :alt => "Edit Entry") %>
		<%= image_tag("box.png", :id => 'box', :class => 'span4', :alt => "Edit Entry") %>
	</section>
	
	<section class="span11">
		<br />
		<legend class="span11"></legend>
		<div class="span11">
			<ul class="nav">
			  <li class="span2"><%= link_to 'Email newsletter', '#', :class => "btn btn-link" %></li>
			  <li class="span1"><%= link_to 'Help', '#', :class => "btn btn-link" %></li>
			  <li class="span1"><%= link_to 'Security', '#', :class => "btn btn-link" %></li>
			  <li class="span1"><%= link_to 'Privacy', '#', :class => "btn btn-link" %></li>
			  <li class="span1"><%= link_to 'Terms', '#', :class => "btn btn-link" %></li>
			  <li class="span1"><%= link_to 'Contact', '#', :class => "btn btn-link" %></li>
				<li class="span1"><%= '|' %></li>
				<li class="span2"><%= 'Copyright ©2013. Connect' %></li>
			</ul>
		</div>
	</section>

	
</div>


